# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[{*.yml,*.yaml,.yamllint}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{*.htm,*.html}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
